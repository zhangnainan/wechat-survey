page{
  background-color: #f5f5f5;
}

.container{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0rpx;
  letter-spacing: 2rpx;
}

.survey-container{
  padding: 30rpx 30rpx 0rpx 30rpx;
  display: flex;
  flex-direction: column;
  width: 100%;
  background-color: #fff;
  box-sizing: border-box;
}
.survey-name{
  font-size: 35rpx;
  font-weight: bold;
  color:rgb(58, 168, 204);
}

.survey-notes{
  color: #999;
  font-size: 30rpx;
  margin-top: 30rpx;
}

.survey-buttons{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #f9fdff;
  margin-top: 30rpx;
  margin-left: -30rpx;
  margin-right: -30rpx;
  height: 120rpx;
}

.button{
  display: flex;
  flex-direction: column;
}
.image{
  width: 50rpx;
  height: 50rpx;
}
.text{
  font-size : 24rpx;
  color: #999;
  text-align: center;
}

.title-container{
  width: 100%;
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  background-color: #fff;
}
