.title{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  font-size: 30rpx;
  padding: 30rpx;
  align-items: flex-start;
}

.title-sequence-view{
  height: 50rpx;
  width: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.title-name{
  width: 90%;
  line-height: 50rpx;
}

.require-flag{
  width: 20rpx;
}

.title-sequence{
  width:40rpx;
}



.option-container{
  display: flex;
  flex-direction: column;
  padding: 0 30rpx 30rpx 30rpx;
}

.option{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: flex-start;
}

.image-view{
  height: 50rpx;
  width: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.option-image{
  height: 30rpx;
  width: 30rpx;
  margin-right: 20rpx;
}

.option-name{
  width:  90%; 
  font-size: 28rpx;
  line-height: 52rpx;
}

.text-container{
  padding: 0rpx 30rpx 30rpx 30rpx;
}

.text-image{
  height: 50rpx;
  width: 100%;
}

