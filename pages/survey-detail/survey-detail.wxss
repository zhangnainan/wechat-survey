
.show-author {
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(153,153,153,0.6);
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 99;
  opacity: .7;
}

.show-author-title {
  position: absolute;
  bottom: 0rpx;
  width: 100%;
  height: auto;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: white;
  color: #999;
}

