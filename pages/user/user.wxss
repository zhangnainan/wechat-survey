/* pages/login/login.wxss */

page{
  height: 100%;
}
.login-bg-img{
    width: 100%;
    height: 100%;
    position:fixed; 
    background-size:100% 100%;
    z-index: -1;
}
.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  /* background-color: #f2f2f2;     */
} 


 
/*登录图片*/
.login-icon{
  flex: none;
  margin: 0 auto;
  margin-top: 200rpx;
}
.login-img{
  width: 206rpx;
  height: 110rpx;
  border-radius: 110rpx;
}
 
/*表单内容*/
.login-from {
  width: 70%;
  margin-top: 90px;
  flex: auto;
  height:100%;
}
 
.cell-padding{
  padding: 10rpx;
}
/* 输入框 */
.myno{
  width: 100%;
  height: 80rpx;
  margin: 0 auto;
  border:1px solid #ccc;
  border-radius: 50rpx;
}
.mypwd{
  width: 100%;
  height: 80rpx;
  margin:0 auto;
  border:1px solid #ccc;
  border-radius: 50rpx;
  margin-top: 20rpx;
}
/*按钮*/
.loginBtnView {
  width: 100%;
  padding: 0rpx;
  margin-top: 0px;
  margin-bottom: 0px;
  padding-bottom: 0px;
}
 
.loginBtn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 35px;
  color: #fff;
  background-color:#409eff;
 /* background-color:#7e8ef0; */
  /*border: 0.1rpx solid #ccc;*/
  border-radius: 40rpx;
  font-size: 35rpx;
  padding: 0; /* button组件有默认样式，所以设置line-height不会使文字垂直居中。 */
}
 
 
.nameImage, .keyImage {
  margin-right: 10px;
  width: 18px;
  height: 18px
}
