.loading-center {
  position: absolute;
  top: 50%;
  left: 50%;
}

.submit-container{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  padding :0 20rpx 20rpx 20rpx;
  box-sizing: border-box;
}
.header{
  display: flex;
  width: 100%;
  flex-direction: row;
  background-color: rgb(58, 168, 204);
  height: 85rpx;
  line-height: 85rpx;
  font-size: 40rpx;
  border-radius: 10rpx;
}

.submit-item{
  display: flex;
  width: 100%;
  flex-direction: row;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  border-bottom: 1rpx dashed #959699;
}



